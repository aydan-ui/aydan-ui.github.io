{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Popularity vs Average Rating",
  "data": {
    "url": "https://raw.githubusercontent.com/aydan-ui/aydan-ui.github.io/refs/heads/main/popular_movies-4.csv",
    "format": {"type": "csv"}
  },
  "mark": {
    "type": "circle",
    "opacity": 0.7
  },
  "width": 400,
  "height": 300,
  "encoding": {
    "x": {
      "field": "popularity",
      "type": "quantitative",
      "title": "Popularity Score",
      "axis": {"labelFontSize": 12, "titleFontSize": 14}
    },
    "y": {
      "field": "vote_average",
      "type": "quantitative",
      "title": "Average Rating",
      "axis": {"labelFontSize": 12, "titleFontSize": 14}
    },
    "size": {
      "value": 50
    },
    "color": {
      "field": "vote_average",
      "type": "quantitative",
      "title": "Average Rating",
      "scale": {"scheme": "viridis"}
    },
    "tooltip": [
      {"field": "title", "type": "nominal", "title": "Movie Title"},
      {"field": "popularity", "type": "quantitative", "title": "Popularity Score", "format": ".1f"},
      {"field": "vote_average", "type": "quantitative", "title": "Average Rating", "format": ".1f"}
    ]
  },
  "config": {
    "axis": {
      "labelFontSize": 12,
      "titleFontSize": 14
    },
    "title": {"fontSize": 16}
  },
  "title": "Popularity vs Average Rating"
}
