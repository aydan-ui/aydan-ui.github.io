{
  "title": {
    "text": "Passenger Age Distribution on the Titanic",
    "subtitle": "Source: Titanic Dataset (Seaborn)",
    "fontSize": 16,
    "fontWeight": "bold"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/aydan-ui/aydan-ui.github.io/refs/heads/main/titanic_dataset.csv",
    "format": {"type": "csv"}
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "age",
      "type": "quantitative",
      "bin": {"maxbins": 30},
      "title": "Age (Years)"
    },
    "y": {
      "aggregate": "count",
      "type": "quantitative",
      "title": "Frequency",
      "scale": {"domain": [0, 35]}
    },
    "tooltip": [
      {"field": "count", "type": "quantitative"},
      {"field": "age", "type": "quantitative"}
    ]
  },
  "width": 800,  
  "height": 600   
}
