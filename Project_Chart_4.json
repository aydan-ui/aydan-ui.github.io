{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Popularity Trend for Selected Genres by Release Year",
  "data": {
    "url": "https://raw.githubusercontent.com/aydan-ui/aydan-ui.github.io/refs/heads/main/Cleaned_and_Processed_Movie_Data.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "genre_selection",
      "value": "Adventure",
      "bind": {
        "name": "Select Genre: ",
        "input": "select",
        "options": [
          "Adventure",
          "Romance",
          "Science Fiction",
          "Animation",
          "Action"
        ]
      }
    },
    {
      "name": "start_year",
      "value": 2000,
      "bind": {"input": "range", "min": 1990, "max": 2024, "step": 1, "name": "Start year: "}
    },
    {
      "name": "end_year",
      "value": 2024,
      "bind": {"input": "range", "min": 1990, "max": 2024, "step": 1, "name": "End year: "}
    }
  ],
  "transform": [
    {
      "filter": "datum.genre_name == genre_selection"
    },
    {
      "filter": "datum.release_year >= start_year && datum.release_year <= end_year"
    }
  ],
  "mark": {"type": "line", "point": {"filled": true, "size": 100, "tooltip": true}},
  "encoding": {
    "x": {
      "field": "release_year",
      "type": "ordinal",
      "title": "Release Year",
      "axis": {
        "labelAngle": 45,
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "y": {
      "field": "average_popularity",
      "type": "quantitative",
      "title": "Average Popularity",
      "axis": {
        "labelFontSize": 12,
        "titleFontSize": 14
      }
    },
    "color": {
      "field": "genre_name",
      "type": "nominal",
      "scale": {
        "domain": [
          "Adventure",
          "Romance",
          "Science Fiction",
          "Animation",
          "Action"
        ],
        "range": [
          "#ff7f0e",
          "#e377c2",
          "#1f77b4",
          "#2ca02c",
          "#d62728"
        ]
      },
      "legend": null
    },
    "tooltip": [
      {"field": "release_year", "type": "ordinal", "title": "Release Year"},
      {"field": "genre_name", "type": "nominal", "title": "Genre"},
      {
        "field": "average_popularity",
        "type": "quantitative",
        "title": "Average Popularity",
        "format": ".2f"
      }
    ]
  },
  "title": "Popularity Trend for Selected Genres by Release Year"
}
